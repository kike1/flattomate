<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@mipmap/pisos"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.flattomate.HomeActivity"
    tools:showIn="@layout/home_layout">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Flat To Mate"
        android:id="@+id/nameApp"
        android:textColor="#ffffff"
        android:textSize="42dp"
        android:layout_marginTop="99dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="170dp"
        android:layout_height="75dp"
        android:text="Iniciar sesión"
        android:textAllCaps="false"
        android:textSize="18dp"
        android:id="@+id/btn_login"
        android:background="@drawable/transparentbutton"
        android:layout_alignBottom="@+id/btn_signin"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#FFFFFF"
        android:onClick="loginView" />

    <Button
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:text="Registrarse"
        android:textAllCaps="false"
        android:textSize="18dp"
        android:textColor="#ffffff"
        android:id="@+id/btn_signin"
        android:background="@drawable/transparentbutton"
        android:layout_weight="0.22"
        android:onClick="signupView"
        android:layout_below="@+id/nameApp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="89dp"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Tu nuevo piso está aquí!"
        android:id="@+id/textView"
        android:textColor="@color/white"
        android:layout_below="@+id/nameApp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp" />

</RelativeLayout>
