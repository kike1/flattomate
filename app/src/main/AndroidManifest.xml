<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="myapp.myapp">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">

        <activity
            android:name="myapp.flattomate.HomeActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>

        <activity
            android:name="myapp.flattomate.LoginActivity"
            android:label="@string/title_activity_login"
            android:parentActivityName="myapp.flattomate.HomeActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="myapp.flattomate.HomeActivity" />
        </activity>

        <activity
            android:name="myapp.flattomate.RegisterActivity"
            android:label="@string/title_activity_activity_signin"
            android:parentActivityName="myapp.flattomate.HomeActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="myapp.flattomate.HomeActivity" />
        </activity>

        <activity android:name="myapp.flattomate.DashboardActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="myapp.flattomate.EditProfile" />

        <activity
            android:name="myapp.flattomate.ProfileActivity"
            android:parentActivityName="myapp.flattomate.DashboardActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="myapp.flattomate.DashboardActivity"/>

        </activity>
    </application>

</manifest>